import pandas as pd
import simulationModules

# initialize empty data frames to log results
simulationTeamResults = pd.DataFrame()
simulationPlayerResults = pd.DataFrame()

# simulation parameters
allowedImports = 4  # the number of allowed import players per team, references 'rho' in thesis
seasons = 10  # the number of consecutive seasons to simulate, references 't' in thesis
salaryCap = False  # boolean indicator if salary cap is to be simulated or not, references 'R_cap' in thesis

# simulate consecutive seasons
simulationTeamResults, simulationPlayerResults = simulationModules.simulate_consecutive_seasons(simulationTeamResults, simulationPlayerResults, allowedImports, seasons, salaryCap)
